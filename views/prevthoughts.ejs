<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Previous Thoughts</title>
    <style>
        body {
            background: #f0f0f0;
            font-family: sans-serif;
            margin: 0;
            padding: 20px;
        }
        .thought-container {
            max-width: 800px;
            margin: auto;
            margin-top: 20px;
        }
        .thought {
            background: white;
            margin-bottom: 15px;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.8s forwards;
        }
        .thought p {
            margin: 0;
        }
        .thought small {
            color: #777;
        }
        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
<div class="thought-container">
    <% if (rows && rows.length > 0) { %>
        <% rows.forEach(function(thought, index) { %>
            <div class="thought" style="animation-delay: <%= index * 0.2 %>s">
                <p><%= thought.thought_text %></p>
                <small>Posted on: <%= new Date(thought.created_at).toLocaleString() %></small>
            </div>
        <% }); %>
    <% } else { %>
        <div class="thought">
            <p>No thoughts available.</p>
        </div>
    <% } %>
</div>
</body>
</html>
